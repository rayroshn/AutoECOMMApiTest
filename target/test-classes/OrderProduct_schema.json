{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "string"
    },
    "orders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "user_id": {
            "type": "string"
          },
          "product_id": {
            "type": "string"
          },
          "product_name": {
            "type": "string"
          },
          "product_amount": {
            "type": "string"
          },
          "qty": {
            "type": "string"
          },
          "tax_amt": {
            "type": "string"
          },
          "total_amt": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "user_id",
          "product_id",
          "product_name",
          "product_amount",
          "qty",
          "tax_amt",
          "total_amt"
        ]
      }
    }
  },
  "required": ["message", "orders"]
}
